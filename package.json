{
  "name": "colorication",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "devcss": "npx tailwindcss -i ./src/index.css -o ./index.css --watch",
    "buildcss": "npx tailwindcss -i ./src/index.css -o ./index.css",
    "dev": "npm run buildcss && vite",
    "build": "npm run buildcss && tsc && vite build && cp assets/images/ dist/assets/ -r && cp assets/sounds/ dist/assets/ -r",
    "preview": "vite preview",
    "lint": "eslint --ext .ts src/",
    "fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.+(js|json|yml|ts|tsx)\""
  },
  "devDependencies": {
    "@types/core-js": "^2.5.5",
    "@types/howler": "^2.2.7",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "dependency-cruiser": "^11.16.1",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.26.0",
    "howler": "^2.2.3",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.9.5",
    "vite": "^3.1.0"
  },
  "dependencies": {
    "@types/lodash": "^4.14.186",
    "@types/object-hash": "^2.2.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "object-hash": "^3.0.0",
    "phaser": "^3.55.2",
    "ts-node": "^10.9.1",
    "ts-pattern": "^4.0.5",
    "uuid": "^9.0.0"
  },
  "eslintConfig": {
    "globals": {
      "angular": true
    }
  }
}
